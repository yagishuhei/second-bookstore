<div class="container">
  <h2 class="col-12 py-4"><%= @category.name %></h2>
  <div class="row ">
    <% @category.books.each do |book| %>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <%= link_to (image_tag(book.medium_image_url)), book.item_url %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <p class="card-text"><%= book.title %></p>
              <p class="card-text"><%= book.author %></p>
              <p><%= book.publisher_name %></p>
            </div>
            <div class="row">
              <p class= "col">
                <%= link_to "詳細", book_path(book), class: "btn btn-sm btn-info" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>