<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class= "col-md-8 offset-md-1">
      <h1 class="text-dark p-4 md-0">投稿したレビュー一覧</h1>
              <!--エラーメッセージ-->
        <% if @review.errors.any? %>
          <%= @review.errors.count %>件のエラーが発生しました
          <ul>
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      <div class = "card-list-container py-1 col-12">
        <%= render "public/reviews/index", reviews: @reviews %>
      </div>
    </div>
    <div class= "col-md-3">
      <%= render 'public/books/rakuten_search' %>

    <div class= "mt-3">
      <h3>カテゴリー</h3>
      <%= render 'public/categories/index', categories: @categories %>
    </div>
    <div>
      <%= render 'public/searchs/search' %>
    </div>
  </div>
  </div>
</div>

