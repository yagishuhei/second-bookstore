<% if current_end_user != end_user %>
  <% if current_end_user.following?(end_user) %>
    <%= link_to 'フォロー外す', end_user_relationships_path(end_user), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
  <% else %>
    <%= link_to 'フォローする', end_user_relationships_path(end_user), method: :post, remote: true, class: "btn btn_sm btn-success" %>
  <% end %>
<% end %>