<div class="container">
  <div class="row py-4">
    <div class="col-12 w-50 mx-auto mt-1">
      <h2 class="col-12 w-50 mx-auto mt-1 text-center">配送先編集</h2>
    </div>
    <div class= "card w-50 mx-auto mt-1 shadow-lg">
      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <div class="form-body p-4">
          <div class= "input-group md-3 mt-4">
            <div class="col-12">
              <%= f.label :postal_code, "郵便番号" %>
              <%= f.text_field :postal_code, required: true, class: "form-control" %>
            </div>
            <div class="col-12">
              <%= f.label :address, "住所" %>
              <%= f.text_field :address, required: true, class: "form-control" %>
            </div>
            <div class="col-12">
              <%= f.label :name, "宛名" %>
              <%= f.text_field :name, required: true, class: "form-control" %>
            </div>
            <div class="col-12">
              <%= f.submit"編集", class: "btn btn-lg btn-block btn-info mt-4" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>