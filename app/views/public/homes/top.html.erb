<% if end_user_signed_in? %>

<div class="row px-0 ">
    <div class= "col-md-7 py-4 offset-md-1">
       <h2>レビューする本を探す</h2>
       <div class="col-md-8 offset-md-1 py-3">
    <%= render 'public/books/rakuten_search' %>
    </div>
      <h2 class="text-dark p-4 md-0">最新レビュー</h2>
      <div class = "card-list-container py-1 col-12">
        <% @reviews.each_with_index do |review,index| %>
          <div class= "card w-90 mx-auto mt-1 shadow-lg">
            <div class= "row card-body my-0">

                <div class="col-2 px-0 py-0">
                <%= link_to (image_tag(review.book.medium_image_url)), review.book.item_url %>
                </div>
                <div class="col-2 px-0 mx-0">
                  <p><%= image_tag review.end_user.get_profile_image("100x100"), class: "mt-3 rounded-circle" %></p>
                  <p><%= review.end_user.last_name %></p>
                </div>
                <div class="col-6">
                    <%= review.book.title %>
                    <div id="score_<%= index %>"><%= render 'public/reviews/score', review: review, index: index %></div><%= review.score %>
                  <P>
                    <%= link_to review_path(review, index: index) do %>
                    <%= review.heading %>
                    <% end %>
                  </P>
                  <p><%= link_to "#{review.review_comments.count}コメント", review_path(review) %></p>
                </div>
            </div>
          </div>
        <% end %>
        <%= paginate @reviews %>
      </div>
    </div>
   <div class= "col-md-4 py-4 my-0 bg-light">
      <%= render 'public/books/rakuten_search' %>

    <div class="py-3">
      <%= render 'public/searchs/search' %>
    </div>
    <div class= "mt-4">
      <%= render 'public/categories/index', categories: @categories %>
    </div>
    <div class="py-3 text-center">
      <%= render 'public/favorites/index', favorite_ranking: @favorite_ranking %>
    </div>

  </div>
</div>



<% else %>
<div class="container">
  <div class="row">
    <div class="col text-center py-4">
      <h1 class="text-center"><strong>ようこそ2nd-BookStoreへ</strong></h1>
        <h2 class="text-center">ここは本好きが集まれるサイトです</h2>
        <h4 class="py-2">利用の仕方</h4>
        <p class="text-center">
          自分のおすすめ本を紹介でき、またお気に入り本を調べられる</br>
        　本に関してのおすすめポイントをまとめられる</br>
        　インターネット上にMy.本棚として管理</br>
        </p>
    </div>
  </div>
</div>

<% end %>




