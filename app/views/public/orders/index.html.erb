<h1>注文履歴一覧</h1>
<p>購入した本</p>
<div class= "container px-5 px-sm-0">
  <div class= "row">
<% @orders.each do |order| %>
  <div class= "card w-40 mx-auto mt-1 shadow-lg">
    <div class= "card-body">
      <div class = "row">
        <div class "col-5 mx-4">
           <% order.order_details.each do |order_detail| %>
           <P>
          <%= image_tag order_detail.sale.get_sale_iamge("100x100") %></P>
          <P>¥<%= order_detail.price %>円</P>
          <P><%= order_detail.shipping_status_i18n %></P>
          <% end %>
        </div>
        <div class "col-5 px-4">
          <h6>郵便番号</h6>
          <p><%= order.postal_code %></p>
          <h6>配送先住所</h6>
           <p><%= order.shipping_address %></p>
           <h6>宛名</h6>
           <p><%= order.shipping_name %></p>
           <h6>送料</h6>
           <p><%= order.shipping_cost %></p>
           <h6>請求金額</h6>
           <p><%= order.total_payment %></p>
           <h6>支払い方法</h6>
          <p><%= order.payment_method_i18n %></p>
          <h6>ステータス</h6>
           <p><%= order.status_i18n %></p>
           <%= link_to"詳細確認", order_path(order) %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>