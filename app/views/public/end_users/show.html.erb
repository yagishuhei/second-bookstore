<h1>Public::EndUsers#show</h1>

<p>Profile Image</p>
<%= image_tag @end_user.get_profile_image("100x100") %>

<p>Name</p>
<%= @end_user.last_name %>
<%= @end_user.first_name %>

<p>Name_kana</p>
<%= @end_user.last_name_kana %>
<%= @end_user.first_name_kana %>

<p>Nickname</p>
<%= @end_user.nickname %>

<p>Introduction</p>
<%= @end_user.introduction %>


<p>Email</p>
<%= @end_user.email %>

<p>Telephone_number</p>
<%= @end_user.telephone_number %>

<p>Postal_code</p>
<%= @end_user.postal_code %>

<p>Address</p>
<%= @end_user.address %>

<p>Status</p>
<%= @end_user.is_deleted ? "退会" : "有効" %>

<%= link_to "プロフィールを編集", edit_public_end_user_path(@end_user) %>

<h2>お気に入り本の本棚</h2>

<% @books.each do |book| %>
  <%= link_to public_book_path(book) do %>
  <!--楽天のitem_urlを合わせればimage表示可能-->
   <%= link_to (image_tag (book['medium_image_url'])), book['item_url'] %>
    <%= book.title %>
  <% end %>
<% end %>
