<div class= "container px-5 px-sm-0">
  <div class="row">
    <h3 class="text-dark py-4 md-0">プロフィール</h3>
    <%= render 'public/end_users/profile', end_user: @end_user, following_users: @following_users, follower_users: @follower_users %>
  </div>
  <div class="row">
    <div class="col-3">
      <%= link_to "登録本", books_path(end_user_id: @end_user.id), class: "btn btn-lg px-4 btn-info" %>
    </div>
  </div>
  <div class = "card-list-container py-1 col-12">
  <h3>レビュー</h3>
    <% if @reviews.present? %>
      <%= render "public/reviews/index", reviews: @reviews %>
    <% else %>
      <p>ご登録のレビューはございません</p>
    <% end %>
  </div>
</div>



