<h1>詳細ページ</h1>

<p>プロフィール画像</p>
<%= image_tag @end_user.get_profile_image("150x150") %>

<p>氏名</p>
<%= @end_user.last_name %>
<%= @end_user.first_name %>

<p>フリガナ</p>
<%= @end_user.last_name_kana %>
<%= @end_user.first_name_kana %>

<p>ニックネーム</p>
<%= @end_user.nickname %>

<p>自己紹介文</p>
<%= @end_user.introduction %>

<p>Status</p>
<%= @end_user.is_deleted ? "退会" : "有効" %>

<h2>出品内容を見てみる</h2>
<%= link_to "出品一覧", new_sale_path %>
<h2>配送先</h2>
<%= link_to "配送先一覧", addresses_path %>

<h2>お気に入り本の本棚</h2>

<% @reviews.each do |review| %>
  <%= link_to book_path(review.book) do %>
  <!--楽天のitem_urlを合わせればimage表示可能-->
   <%= link_to (image_tag (review.book['medium_image_url'])), review.book['item_url'] %>
    <%= review.book.title %>
    <p><%= link_to "この本のレビュー詳細を見てみる", review_path(review.book) %></p>
  <% end %>
<% end %>

<h2>出品中の本一覧</h2>
<% @sales.each do |sale| %>
 <%= link_to sale_path(sale) do %>
 <%= image_tag sale.get_sale_iamge("100x200") %>
 <%= sale.book.title %>
 <%= sale.price %>円
 <% end %>

<% end %>