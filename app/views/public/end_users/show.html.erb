
<div class= "container px-5 px-sm-0">
  <div class="row">

      <h1 class="text-dark bg-light p-4 md-0">プロフィール</h1>
      <%= render 'public/end_users/profile', end_user: @end_user, following_users: @following_users, follower_users: @follower_users %>
   
</div>


<%= link_to "登録した本", books_path(end_user_id: @end_user.id), class: "btn btn-lg px-4 btn-info" %>
<%= link_to "出品一覧", new_sale_path, class: "btn btn-lg px-4 btn-info" %>

<h3>最新のレビュー</h3>
<% if @review.present? %>
  <!--楽天のitem_urlを合わせればimage表示可能-->
   <%= link_to (image_tag (@review.book['medium_image_url'])), @review.book['item_url'] %>
    <%= @review.book.title %>
    <p><%= link_to "この本のレビュー詳細を見てみる", review_path(@review.book) %></p>
      　<div id="score"></div></br>
      　<%= @review.score %>
       <!--レビュー５段階評価-->

        <script>

          $('#score').raty({
            //imageを表示
            starOff: '<%= asset_path('star-off.png') %>',
            starOn: '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            //半値も表示できる
            half: true,
            //固定して表示できる
            readOnly: true,
            //呼び出したいカラムデータ
            score: <%= @review.score %>,
          });

        </script>
      <!--/レビュー５段階評価-->

     <p><%= link_to "#{@review.review_comments.count}コメント", review_path(@review) %></>
  <p><i class="fas fa-heart"></i><%= @review.favorites.count %>イイね</p>
<% else %>
<p>ご登録の本はございません。</p>
<% end%>



<h2>出品中の本一覧</h2>
<% @sales.each do |sale| %>
 <%= link_to sale_path(sale) do %>
 <%= image_tag sale.get_sale_iamge("100x200") %>
 <%= sale.book.title %>
 <%= sale.price %>円
 <% end %>

<% end %>

</div>





