<h1>出品した本を編集する</h1>
<%= form_with model: @sale, url: public_sale_path(book_id: @book), method: :patch do |f| %>

<div>
  <%= f.label :sale_image, "本の詳細画像" %>
  <%= f.file_field :sale_image, placeholder: "出品する本の画像", accept: "image/*" %>
  <%= f.label :introduction,"商品説明" %>
  <%= f.text_area :introduction %>
  <%= f.label :price,"出品価格" %>
  <%= f.text_field :price %>
  <%= f.label :is_active,"出品の状態" %>
  <%= f.select :is_active, [['出品中', true], ['出品不可', false]], prompt: "--選択してください--" %>
  <%= f.submit"出品する" %>
</div>

<% end %>