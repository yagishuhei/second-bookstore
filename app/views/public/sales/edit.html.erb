<div class="container">
  <h2 class="text-center py-4">出品内容を編集</h2>
  <%= form_with model: @sale, url: sale_path(book_id: @book), method: :patch do |f| %>
    <div class="row">
      <div class= "card mx-auto mt-1 shadow-lg" style="max-width: 420px;">
        <div class="form-body p-4">
          <div class= "input-group md-3 mt-4">
            <p>
              <!--エラーメッセージ-->
              <% if @sale.errors.any? %>
                <%= @sale.errors.count %>件のエラーが発生しました
                <ul>
                  <% @sale.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              <% end %>
            </p>
            <div class="col-12">
              <%= f.label :sale_image, "本の詳細画像" %>
              <%= f.file_field :sale_image, placeholder: "出品する本の画像", accept: "image/*" %>
            </div>
            <div class="col-12">
              <%= f.label :title,"商品名" %>
              <%= f.text_field :title, required: true, class: "form-control" %>
            </div>
            <div class="col-12">
              <%= f.label :introduction,"商品説明" %>
              <%= f.text_area :introduction, required: true, class: "form-control" %>
            </div>
            <div class="col-12">
              <%= f.label :price,"出品価格" %>
              <%= f.text_field :price, required: true, class: "form-control" %>
            </div>
              <%= f.hidden_field :status, {:value => "on_sale"} %>
              <%= f.submit"編集内容を保存する", class: "btn btn-lg btn-block btn-info mt-4" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>