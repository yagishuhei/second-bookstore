<div class="container">
  <div class="row">
    <h2 class="col-12 py-4">全ての出品本一覧</h2>
  </div>
  <% if @sales.present? %>
    <%= render 'public/sales/index', sales: @sales %>
    <div class="col-12 py-2">
      <%= link_to "カート情報を確認する", cart_items_path, class: "btn btn-lg btn-info" %>
    </div>
  <% else %>
    <div class="row">
      <p class ="col-12 mx-2">出品されている本はございません</p>
    </div>
  <% end %>
</div>