<h1>本の出品をする</h1>
<% if current_end_user.books.ids.present? %>
  <%= form_with model: @sale, url: sales_path(book_id: @book), method: :post do |f| %>
  <div class = "card-list-container py-1 col-12">

    <% @books.each do |book| %>
      <div class= "card w-50 mx-auto mt-1 shadow-lg">
        <div class= "card-body">
          <div class = "row">
          <div class "col-4">
            <%= link_to image_tag(book['medium_image_url'])), book['item_url'] %>
          </div>
          <div class="col-8">
            <p >
              <%= book.category.name %>
            </p>
            <P>
              <%= book.title %>
            </P>
            <!--本の情報をデータに入れるためラジオボタンを活用-->
            <%= f.radio_button :book_id, book.id, checked: true %>
            <!--/本の情報をデータに入れるためラジオボタンを活用-->
          </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    <div class="contiainer col-12">
      <div class= "card w-50 mx-auto mt-1 shadow-lg">
        <%= f.label :sale_image, "本の詳細画像" %>
        <%= f.file_field :sale_image, placeholder: "出品する本の画像", accept: "image/*" %>

        <%= f.label :introduction,"商品説明" %>
        <%= f.text_area :introduction %>
        <%= f.label :price,"出品価格" %>
        <%= f.text_field :price %>
        <%= f.label :is_active,"出品の状態" %>
        <%= f.select :is_active, [['出品中', true], ['出品不可', false]], prompt: "--選択してください--" %>
        <%= f.submit"出品する" %>
      </div>
    </div>
    <% end %>

<h1>出品した本一覧</h1>
  <% @sales.each do |sale| %>
    <div>
      <%= image_tag sale.get_sale_iamge("200x200") %>
    </div>
    <%= sale.book.title %>
    <%= sale.price %>円
    <%= sale.is_active ? "出品中" : "出品不可" %>
    <%= link_to "編集する", edit_sale_path(sale) %>
  <% end %>

<% else %>
    <p>ご登録された本はございません。</p>
<% end %>