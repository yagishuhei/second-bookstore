<h1>本の出品をする</h1>
<%= form_with model: @sale, url: sales_path(book_id: @book), method: :post do |f| %>
<div>
<% @books.each do |book| %>
  <%= link_to (image_tag(book['medium_image_url'])), book['item_url'] %>
  <%= book.category.name %>
  <%= book.title %>
<!--本の情報をデータに入れるためラジオボタンを活用-->
  <%= f.radio_button(:book_id, book.id ) %>
  <%= f.label(:book_id, book.id, value: book.id ) %>
<!--/本の情報をデータに入れるためラジオボタンを活用-->
<% end %>
</div>
<div>
  <!--複数画像投稿可能-->
  <%= f.label :sale_image, "本の詳細画像" %>
  <%= f.file_field :sale_image, placeholder: "出品する本の画像", accept: "image/*" %>
  <!--複数画像投稿可能-->
  <%= f.label :introduction,"商品説明" %>
  <%= f.text_area :introduction %>
  <%= f.label :price,"出品価格" %>
  <%= f.text_field :price %>
  <%= f.label :is_active,"出品の状態" %>
  <%= f.select :is_active, [['出品中', true], ['出品不可', false]], prompt: "--選択してください--" %>
  <%= f.submit"出品する" %>
</div>
<% end %>
<h1>出品した本一覧</h1>
<% @sales.each do |sale| %>
  <%= image_tag sale.get_sale_iamge("100x150") %>
  <%= sale.book.title %>
  <%= sale.price %>円
  <%= sale.is_active ? "出品中" : "出品不可" %>
  <%= link_to "編集する", edit_sale_path(sale) %>

<% end %>