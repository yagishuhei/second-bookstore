<h1>本の検索結果一覧</h1>

<table class= "table table-hover table-inverse">
  <% if @renge == "end_user" %>
    <tbody>
      <% @end_users.each do |end_user| %>
        <tr>
          <td>
            <%= image_tag end_user.get_profile_image("100x100") %>
          </td>
          <td>
            <%= end_user.nickname %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
   <tbody>
     <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag book.end_user.get_profile_image("100x100") %>
        </td>
        <td>
          <%= link_to (image_tag(book.medium_image_url)), book.item_url %>
        </td>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= link_to review_path(book.review) do %>
            <%= book.reviews.heading %>
          <% end %>
        </td>
      </tr>
   </tbody>

