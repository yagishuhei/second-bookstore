<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">ログイン</h5>
      <div class="form-body p-4">

        <%= form_with model: @end_user, url: end_user_session_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <div class="input-group mb-3 mt-4">

            <div class="field col-12">
              <%= f.label :email, "メールアドレス" %><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field col-12">
              <%= f.label :password, "パスワード" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="btn col-12 py-3">
              <%= f.submit "ログイン", class: "btn btn-lg btn-block btn-info mt-4" %>
            </div>
          <%= render "public/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>