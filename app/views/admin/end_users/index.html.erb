<div class="container">
  <div class="row mx-auto w-80">
     <h2 class= "col-6 py-5 mx-auto">ユーザー一覧</h2>
    <table class= "table-hover col-12 bg-light has_border">
      <thead class = "py-5">
        <th scope= "col mx-2">会員ID</th>
        <th scope= "col mx-5">イメージ</th>
        <th scope= "col mx-5">氏名</th>
        <th scope= "col mx-5">フリガナ</th>
        <th scope= "col mx-5">会員ステータス</th>
      </thead>
      <tbody>
        <% @end_users.each do |end_user| %>
          <tr>
            <td class="text-center"><%= end_user.id %></td>
            <td><%= image_tag end_user.get_profile_image("100x100") %></td>
            <td><%= end_user.last_name %><%= end_user.first_name %></td>
            <td><%= end_user.last_name_kana %><%= end_user.first_name_kana %></td>
            <td><%= end_user.is_deleted ? "退会" : "有効" %></td>
            <td><%= link_to "詳細", admin_end_user_path(end_user), class: "btn btn-sm px-4 btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


