<h2>レビュー詳細</h2>


<%= link_to (image_tag(@review.book['large_image_url'])), @review.book['item_url'] %>
<%= @review.book.title %>
<%= @review.book.author %>
<%= @review.book.publisher_name %>

<h2>レビュー内容</h2>
<%= @review.heading %>
<%= @review.blog %>
<!--レビュー５段階評価-->
<div id="score"></div>
<%= @review.score %>

<script>

  $('#score').raty({
    //imageを表示
    starOff: '<%= asset_path('star-off.png') %>',
    starOn: '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    //半値も表示できる
    half: true,
    //固定して表示できる
    readOnly: true,
    //呼び出したいカラムデータ
    score: <%= @review.score %>,
  });

</script>

<!--/レビュー５段階評価-->

<%= link_to "このレビューを削除する", admin_review_path(@review), method: :delete, date: {confirm: "本当に削除しますか？"} %>