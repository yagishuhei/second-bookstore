
<h1>カテゴリー新規作成</h1>
<%= form_with model: @category, url: admin_categories_path, method: :post do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit "カテゴリーを追加する" %>
<% end %>

<h1>カテゴリー一覧</h1>
<% @categories.each do |category| %>
  <%= link_to admin_category_path(category) do %>
    <%= category.name %>
  <% end %>
  <%= link_to "削除", admin_category_path(category), method: :delete, data: { confirm: "本当に削除しますか"} %>
<% end %>